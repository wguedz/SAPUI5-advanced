<mvc:View controllerName="logaligroup.Employees.controller.Main" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns="sap.m"
xmlns:core="sap.ui.core"
xmlns:f="sap.f">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>  
                        <f:FlexibleColumnLayout id="fcl" backgroundDesign="Solid" layout="{jsonLayouts>/ActiveKey}">
                            <f:beginColumnPages>
                                <mvc:XMLView id="masterEmployeesView" 
                                             viewName="logaligroup.Employees.view.MasterEmployees"/>
                            </f:beginColumnPages>
                            <f:midColumnPages>
                                <mvc:XMLView id="detailsEmployeesView" 
                                             viewName="logaligroup.Employees.view.EmployeesDetails"/>
                            </f:midColumnPages>    
                            <f:endColumnPages>
                                <Page>
                                </Page>
                            </f:endColumnPages>                                                            
                        </f:FlexibleColumnLayout>
                    </content> 
                    <footer>
                        <Toolbar>
                            <Label text="{i18n>layout}" class="sapUiSmallMargin"/>
                            <Select items="{jsonLayouts>/Layout}" selectedKey="{jsonLayouts>/ActiveKey}">
                            <core:Item key="{jsonLayouts>Key}" text="{jsonLayouts>Text}"></core:Item>
                            </Select>
                        </Toolbar> 
                    </footer>
				</Page>                               
 			</pages>
		</App>
	</Shell>            
</mvc:View>