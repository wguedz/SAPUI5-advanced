<mvc:View controllerName="logaligroup.Employees.controller.MainView" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns="sap.m"
xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox >

                            <Label id="labelEmployee" text="{i18n>labelEmployee}"
                            labelFor="inputEmployee" class="sapUiSmallMargin"/>

                            <Input id="inputEmployee" maxLength="6" 
                            width="200px" class="sapUiSmallMarginEnd" 
                            liveChange="onLiveChange"/>  

                            <Label id="labelCountry" text="{i18n>labelCountry}"
                            visible="false"
                            labelFor="slCountry" class="sapUiSmallMargin"/>
                            <Select id="slCountry" forceSelection="false" visible="false"> 
                                <items>
                                    <core:Item key="US" text="{i18n>countryUS}" />
                                    <core:Item key="UK" text="{i18n>countryUK}" />
                                    <core:Item key="ES" text="{i18n>countryES}" />
                                </items>
                            </Select>

                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
