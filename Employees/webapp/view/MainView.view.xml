<mvc:View controllerName="logaligroup.Employees.controller.MainView" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns="sap.m"
xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox >

                            <Label id="labelEmployee" text="{i18n>labelEmployee}"
                            labelFor="inputEmployee" class="sapUiSmallMargin"/>

                            <Input id="inputEmployee" maxLength="6" 
                            value="{jsonCountries>/EmployeeId}"
                            width="200px" class="sapUiSmallMarginEnd" 
                            />  

                            <Label id="labelCountry" text="{i18n>labelCountry}"
                            visible="true"
                            labelFor="slCountry" class="sapUiSmallMargin"/>
                            
                            <Select id="slCountry" 
                                    selectedKey="{jsonCountries>/CountryKey}"
                                    items="{jsonCountries>/ListCountry}"
                            forceSelection="false" visible="true"> 
                                <items>
                                    <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}" /> 
                                </items>
                            </Select>

                            <Button id="btnFilter" 
                                    text="{i18n>btnFilter}"
                                    icon="sap-icon://search"
                                    class="sapUiSmallMarginEnd"
                                    press="onFilter"/>
                            
                            <Button id="btnClearFilter" 
                                    text="{i18n>btnClearFilter}"
                                    icon="sap-icon://clear-filter"
                                    class="sapUiSmallMarginEnd"
                                    press="onClearFilter"/>
                            
                        </HBox>
                        <HBox>
                            <Panel>

                            <Button id="visibleBtnShowCity" 
                                    text="{i18n>showCity}" 
                                    class="sapUiSmallMarginEnd"
                                    visible="{oJSONModelConfig>/visibleBtnShowCity}"
                                    press="btnShowCity"/>

                            <Button id="visibleBtnHideCity" 
                                    text="{i18n>hideCity}" 
                                    class="sapUiSmallMarginEnd"
                                    visible="{oJSONModelConfig>/visibleBtnHideCity}"
                                    press="btnHideCity"/>

                                <Table id="tableEmployee" items="{jsonEmployees>/Employees}" >
                                    <columns>
                                        <Column visible="{oJSONModelConfig>/visibleID}"> 
                                            <header>
                                                <Label text="{i18n>TableID}"/> 
                                            </header>
                                        </Column>
                                        <Column visible="{oJSONModelConfig>/visibleName}">
                                            <header>
                                                <Label text="{i18n>TableName}"/> 
                                            </header>
                                        </Column>      
                                        <Column visible="{oJSONModelConfig>/visibleCountry}">
                                            <header>
                                                <Label text="{i18n>TableCountry}"/> 
                                            </header>
                                        </Column>   
                                        <Column visible="{oJSONModelConfig>/visibleCity}">
                                            <header>
                                                <Label text="{i18n>TableCity}"/> 
                                            </header>
                                        </Column>                                                                                                                     
                                    </columns>
                                    <items>
                                        <ColumnListItem type="Active" press="showOrders">
                                            <cells>
                                                <Label text="{jsonEmployees>EmployeeID}"/>
                                                <Label text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"/>
                                                <Label text="{jsonEmployees>Country}"/>
                                                <Label text="{jsonEmployees>City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                                <HBox id="ordersTable"/>
                            </Panel>
                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
