<mvc:View controllerName="logaligroup.Employees.controller.MasterEmployees" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns="sap.m"
xmlns:core="sap.ui.core">

				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox >
                            <Label id="labelEmployee" text="{i18n>labelEmployee}"
                            labelFor="inputEmployee" class="sapUiSmallMargin"/>

                            <Input id="inputEmployee" maxLength="6" 
                            value="{jsonCountries>/EmployeeId}"
                            width="200px" class="sapUiSmallMarginEnd" 
                            />  

                            <Label id="labelCountry" text="{i18n>labelCountry}"
                            visible="true"
                            labelFor="slCountry" class="sapUiSmallMargin"/>
                            
                            <Select id="slCountry" 
                                    selectedKey="{jsonCountries>/CountryKey}"
                                    items="{jsonCountries>/ListCountry}"
                            forceSelection="false" visible="true"> 
                                <items>
                                    <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}" /> 
                                </items>
                            </Select>

                            <Button id="btnFilter" 
                                    text="{i18n>btnFilter}"
                                    icon="sap-icon://search"
                                    class="sapUiSmallMarginEnd"
                                    press="onFilter"/>
                            
                            <Button id="btnClearFilter" 
                                    text="{i18n>btnClearFilter}"
                                    icon="sap-icon://clear-filter"
                                    class="sapUiSmallMarginEnd"
                                    press="onClearFilter"/>
                            
                        </HBox>
                        <core:Fragment fragmentName="logaligroup.Employees.fragment.TableEmployee" type="XML"/>
                    </content>
				</Page>
</mvc:View>
